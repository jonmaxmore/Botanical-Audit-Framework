            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/certificates/verify/:certificateNumber",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "verify", ":certificateNumber"],
              "variable": [
                {
                  "key": "certificateNumber",
                  "value": "GACP-2024-001"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Download Certificate (Public)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/certificates/download/:certificateNumber",
              "host": ["{{baseUrl}}"],
              "path": ["certificates", "download", ":certificateNumber"],
              "variable": [
                {
                  "key": "certificateNumber",
                  "value": "GACP-2024-001"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Certificate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"applicationId\": \"app_id_here\",\n  \"certificateNumber\": \"GACP-2024-001\",\n  \"farmName\": \"Green Valley Organic Farm\",\n  \"farmerName\": \"John Doe\",\n  \"cropType\": \"Organic Vegetables\",\n  \"validFrom\": \"2024-01-01\",\n  \"validTo\": \"2025-01-01\",\n  \"standards\": [\"GACP-V1.0\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/certificates",
              "host": ["{{baseUrl}}"],
              "path": ["certificates"]
            }
          },
          "response": []
        }
      ]
    },
