          "name": "Get All Certificates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/certificates",
              "host": ["{{baseUrl}}"],
              "path": ["certificates"]
            }
          },
          "response": []
