{
  "name": "gacp-platform",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "GACP Platform Monorepo",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "turbo run type-check",
    "type-check:all": "turbo run type-check",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:prod": "cross-env NODE_ENV=production eslint .",
    "lint:dev": "cross-env NODE_ENV=development eslint .",
    "lint:test": "cross-env NODE_ENV=test eslint .",
    "lint:backend": "turbo run lint --filter=gacp-backend",
    "lint:backend:fix": "turbo run lint:fix --filter=gacp-backend",
    "lint:backend:prod": "cross-env NODE_ENV=production turbo run lint --filter=gacp-backend",
    "lint:all": "turbo run lint",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,yml,yaml}\"",
    "check:build": "cd apps/backend && tsc --noEmit",
    "check:full": "npm run lint:prod && npm run check:build && npm test",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.21.0",
    "bull": "^4.16.5",
    "concurrently": "^8.2.2",
    "date-fns": "^3.6.0",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.545.0",
    "morgan": "^1.10.1",
    "next": "^16.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.4",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "artillery": "^1.7.9",
    "autoprefixer": "^10.4.16",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.13",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "playwright": ">=1.55.1",
      "@typescript-eslint/eslint-plugin": "6.21.0",
      "@typescript-eslint/parser": "6.21.0"
    }
  }
}
