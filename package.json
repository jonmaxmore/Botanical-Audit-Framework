{
  "name": "gacp-platform",
  "version": "2.0.0",
  "private": true,
  "description": "GACP Platform Monorepo",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:turbo": "turbo run dev",
    "dev:frontend": "cd frontend-nextjs && npm run dev",
    "dev:backend": "cd apps/backend && node atlas-server.js",
    "dev:all": "node start-dev.js",
    "build": "turbo run build",
    "build:frontend": "cd frontend-nextjs && npm run build",
    "start:frontend": "cd frontend-nextjs && npm start",
    "start:backend": "cd apps/backend && node atlas-server.js",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint:check && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "clean": "turbo run clean",
    "install:all": "npm install && cd apps/backend && npm install && cd frontend-nextjs && npm install",
    "health": "node -e \"console.log('Node.js:', process.version); console.log('Platform:', process.platform);\"",
    "prepare": "husky install",
    "uat:setup": "cp .env.uat.example .env.uat && echo 'Please update .env.uat with your configuration'",
    "uat:seed": "node scripts/seed-uat-data.js",
    "uat:test": "node scripts/run-uat-tests.js",
    "uat:server": "NODE_ENV=uat node apps/backend/server.js",
    "uat:all": "npm run uat:seed && npm run uat:server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.1.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "joi": "^18.0.1",
    "mongodb": "^6.20.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
