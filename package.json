{
  "name": "gacp-platform",
  "version": "2.0.0",
  "private": true,
  "description": "GACP Platform Monorepo",
  "scripts": {
    "dev": "npx turbo run dev",
    "build": "npx turbo run build",
    "start": "npx turbo run start",
    "type-check": "npx turbo run type-check",
    "lint": "npx turbo run lint",
    "lint:fix": "npx turbo run lint:fix",
    "format": "npx prettier --write \"**/*.{js,ts,json,md,yml,yaml}\"",
    "format:check": "npx prettier --check \"**/*.{js,ts,json,md,yml,yaml}\"",
    "db:manager": "npx turbo run db:manager --filter=gacp-backend",
    "test": "npx turbo run test",
    "test:watch": "npx turbo run test:watch",
    "prepare": "husky install"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "pm2": "^6.0.13",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "playwright": ">=1.55.1",
      "@typescript-eslint/eslint-plugin": "6.21.0",
      "@typescript-eslint/parser": "6.21.0"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "npx eslint --fix",
    "*.{json,md,yml,yaml}": "npx prettier --write"
  }
}
