{
  "name": "gacp-platform",
  "version": "2.0.0",
  "private": true,
  "description": "GACP Platform Monorepo",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit --skipLibCheck && cd apps/farmer-portal && tsc --noEmit --skipLibCheck",
    "type-check:all": "tsc --noEmit --skipLibCheck && cd apps/farmer-portal && tsc --noEmit --skipLibCheck && cd ../admin-portal && tsc --noEmit --skipLibCheck && cd ../certificate-portal && tsc --noEmit --skipLibCheck",
    "lint": "pnpm --filter frontend lint",
    "lint:backend": "cd apps/backend && eslint . --ext .js",
    "lint:backend:fix": "cd apps/backend && eslint . --ext .js --fix",
    "lint:all": "npm run lint && npm run lint:backend",
    "lint:fix": "npm run lint -- --fix && npm run lint:backend:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "http-proxy-middleware": "^3.0.5",
    "morgan": "^1.10.1",
    "next": "^16.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "artillery": "^2.0.26",
    "autoprefixer": "^10.4.16",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.13",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "playwright": ">=1.55.1",
      "@typescript-eslint/eslint-plugin": "6.21.0",
      "@typescript-eslint/parser": "6.21.0"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc --noEmit --skipLibCheck'"
    ]
  }
}
