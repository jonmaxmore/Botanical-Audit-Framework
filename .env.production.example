# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=5000
APP_NAME="Botanical Audit Framework"
APP_VERSION=2.0.0

# ========================================
# Database Configuration
# ========================================
MONGODB_URI=mongodb://mongodb:27017/gacp-production
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=<STRONG_PASSWORD_HERE>
DB_NAME=gacp-production

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=<STRONG_PASSWORD_HERE>
REDIS_TTL=3600

# ========================================
# Security Configuration
# ========================================
JWT_SECRET=<GENERATE_STRONG_SECRET_HERE>
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=<GENERATE_STRONG_SECRET_HERE>
ENCRYPTION_KEY=<GENERATE_32_CHAR_KEY_HERE>

# ========================================
# CORS Configuration
# ========================================
ALLOWED_ORIGINS=https://admin.yourdomain.com,https://farmer.yourdomain.com,https://cert.yourdomain.com
CORS_CREDENTIALS=true

# ========================================
# Google Services
# ========================================
# Google Gemini AI
GOOGLE_GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>

# Google Calendar
GOOGLE_CALENDAR_ID=<YOUR_CALENDAR_ID>
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-service-account.json

# ========================================
# Email Configuration (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<YOUR_EMAIL@gmail.com>
SMTP_PASS=<YOUR_APP_PASSWORD>
SMTP_FROM=noreply@yourdomain.com

# ========================================
# Alert Configuration
# ========================================
ALERT_EMAILS=admin@yourdomain.com,ops@yourdomain.com
ALERT_SMS=+66812345678
ALERT_ENABLED=true

# ========================================
# File Upload Configuration
# ========================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ========================================
# Queue Configuration
# ========================================
QUEUE_ENABLED=true
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_DELAY=5000

# ========================================
# Cache Configuration
# ========================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=100mb

# ========================================
# Monitoring Configuration
# ========================================
MONITORING_ENABLED=true
METRICS_SYSTEM_INTERVAL=30000
METRICS_CACHE_INTERVAL=10000
METRICS_QUEUE_INTERVAL=15000

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_DIR=/app/logs
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# ========================================
# Performance Configuration
# ========================================
MAX_POOL_SIZE=100
MIN_POOL_SIZE=10
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# ========================================
# Grafana (Optional)
# ========================================
GRAFANA_PASSWORD=<STRONG_PASSWORD_HERE>

# ========================================
# SSL/TLS Configuration (for nginx)
# ========================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/key.pem

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Backup Configuration
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=<YOUR_S3_BUCKET>
AWS_ACCESS_KEY_ID=<YOUR_AWS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET>
AWS_REGION=ap-southeast-1

# ========================================
# CDN Configuration (Optional)
# ========================================
CDN_ENABLED=false
CDN_URL=https://cdn.yourdomain.com
CDN_PROVIDER=cloudflare

# ========================================
# External Services
# ========================================
# Twilio (for SMS)
TWILIO_ACCOUNT_SID=<YOUR_TWILIO_SID>
TWILIO_AUTH_TOKEN=<YOUR_TWILIO_TOKEN>
TWILIO_PHONE=<YOUR_TWILIO_PHONE>

# ========================================
# Feature Flags
# ========================================
FEATURE_AI_QC=true
FEATURE_AUTO_SCHEDULE=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_PUSH_NOTIFICATIONS=false

# ========================================
# Deployment Information
# ========================================
DEPLOY_ENV=production
DEPLOY_REGION=ap-southeast-1
DEPLOY_VERSION=2.0.0
DEPLOY_DATE=2025-11-04
