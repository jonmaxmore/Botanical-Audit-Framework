# ============================================
# GACP Platform - Environment Configuration
# ============================================

# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=0.0.0.0

# MongoDB
MONGODB_URI=mongodb://localhost:27017/gacp_development

# JWT Secrets (CHANGE IN PRODUCTION!)
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-this-in-production

# Frontend
FRONTEND_URL=http://localhost:3000

# Email (SendGrid)
EMAIL_FROM=noreply@gacp.platform
SENDGRID_API_KEY=
SENDGRID_ENABLED=false
