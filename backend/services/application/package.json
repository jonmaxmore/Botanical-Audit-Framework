{
  "name": "@gacp/application-service",
  "version": "1.0.0",
  "description": "GACP Certification Application Management Service",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config jest.config.js --runInBand --forceExit --detectOpenHandles",
    "test:watch": "jest --config jest.config.js --watch --runInBand --forceExit",
    "test:coverage": "jest --config jest.config.js --coverage --runInBand --forceExit --detectOpenHandles",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration --runInBand --forceExit",
    "test:unit": "jest --config jest.config.js --testPathPattern=unit --runInBand --forceExit",
    "test:clean": "powershell -ExecutionPolicy Bypass -File ./cleanup-test.ps1",
    "pretest": "powershell -ExecutionPolicy Bypass -File ./cleanup-test.ps1"
  },
  "keywords": ["gacp", "cannabis", "certification", "application", "fsm"],
  "author": "GACP Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2"
  }
}
