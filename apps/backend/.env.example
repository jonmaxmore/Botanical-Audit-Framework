# Backend Environment Configuration
# Copy to .env and fill in actual values

# Environment
NODE_ENV=development
PORT=5000

# AWS Configuration (Production only)
USE_AWS_SECRETS=false
AWS_REGION=ap-southeast-1
AWS_SECRET_NAME=gacp-platform/production

# Database
MONGODB_URI=mongodb://localhost:27017/gacp-platform
MONGODB_TEST_URI=mongodb://localhost:27017/gacp-platform-test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Secrets (CHANGE IN PRODUCTION)
FARMER_JWT_SECRET=your-farmer-jwt-secret-min-32-chars
DTAM_JWT_SECRET=your-dtam-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d

# AWS Services (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=gacp-documents

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@gacp-platform.com

# SMS
SMS_API_KEY=
SMS_API_SECRET=

# LINE Notify
LINE_NOTIFY_TOKEN=

# OpenWeatherMap API
OPENWEATHER_API_KEY=

# Agora Video Call
AGORA_APP_ID=20028831
AGORA_APP_CERTIFICATE=4a458225df3358aee176b10efcca32869070dcbf1411175731e8639402e90d3b

# Payment
PAYMENT_API_KEY=
PAYMENT_SECRET_KEY=

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
