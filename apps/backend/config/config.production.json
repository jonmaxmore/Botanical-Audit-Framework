{
  "app": {
    "name": "Botanical Audit Framework",
    "version": "2.0.0",
    "environment": "production"
  },
  "server": {
    "port": 5000,
    "host": "localhost",
    "cors": {
      "allowedOrigins": ["http://localhost:3000"],
      "allowedMethods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 100,
      "timeWindow": 900000
    }
  },
  "mongodb": {
    "uri": "mongodb://localhost:27017/gacp_production",
    "reconnectInterval": 5000,
    "reconnectAttempts": 5
  },
  "logging": {
    "level": "info",
    "format": "combined",
    "errorLogPath": "./logs/error.log",
    "combinedLogPath": "./logs/combined.log"
  },
  "auth": {
    "jwtExpiration": "7d",
    "refreshTokenExpiration": "30d"
  },
  "storage": {
    "type": "local",
    "localPath": "./uploads",
    "maxFileSize": 10485760
  },
  "features": {
    "enableSocketNotifications": true,
    "enableQuestionnaires": true,
    "enableTraceability": true,
    "enableStandardsComparison": true,
    "enableReporting": true
  },
  "modules": {
    "farmManagement": {
      "enabled": true,
      "maxPlotsPerFarm": 50,
      "maxCropsPerFarm": 100
    },
    "questionnaires": {
      "enabled": true,
      "maxQuestionsPerSection": 50,
      "maxSectionsPerQuestionnaire": 10
    },
    "traceability": {
      "enabled": true,
      "qrCodeBaseUrl": "https://trace.botanical-audit.org/verify"
    },
    "standards": {
      "enabled": true,
      "autoGenerateActionPlans": true
    },
    "reporting": {
      "enabled": true,
      "scheduledReports": true,
      "exportFormats": ["json", "csv", "pdf"]
    }
  }
}
