# Local development environment variables for the GACP Next.js frontend
# Copy this file to .env.local and adjust values as needed

# Base URL for backend API requests
NEXT_PUBLIC_API_URL=http://localhost:5000

# Milliseconds before Axios cancels a request
NEXT_PUBLIC_API_TIMEOUT=30000

# Toggle mock data sources (true/false)
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Client-side logging verbosity (debug|info|warn|error)
NEXT_PUBLIC_LOG_LEVEL=info
