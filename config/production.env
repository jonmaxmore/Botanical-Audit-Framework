# GACP Platform Production Configuration
# Environment variables for production deployment

API_VERSION=1.0.0
# ===============================================
# SERVER CONFIGURATION
# ===============================================
NODE_ENV=production
PORT=3004

MONGODB_DB_NAME=gacp-production
# ===============================================
# MONGODB ATLAS CONFIGURATION
# ===============================================
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gacp-production?retryWrites=true&w=majority

MONGODB_MAX_IDLE_TIME_MS=30000
# Database Connection Pool Settings
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=5
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
# ===============================================
# JWT AUTHENTICATION
# ===============================================
# Generate a secure random string for production
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

RATE_LIMIT_MAX_REQUESTS=100
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000

# Security headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

GACP_COMPLIANCE_STANDARDS=WHO-GACP,Thai-FDA,ASEAN-TM
# ===============================================
# GACP BUSINESS LOGIC CONFIGURATION
# ===============================================
# WHO-GACP Compliance Version
GACP_VERSION=2024.1

CCP_METHODOLOGY=HACCP-based
# Critical Control Points Configuration
CCP_TOTAL_COUNT=8

SCORING_EXCELLENT_THRESHOLD=90
# Scoring System Configuration
SCORING_PASSING_THRESHOLD=75
SCORING_WEIGHTS_ENABLED=true

WORKFLOW_AUTO_TRANSITION_ENABLED=false
# Workflow Configuration
WORKFLOW_TOTAL_STATES=17
WORKFLOW_VALIDATION_STRICT=true

# ===============================================
# HEALTH MONITORING
# ===============================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_HISTORY_MAX_ENTRIES=100
MONITORING_ENABLED=true

DB_HEALTH_CHECK_RETRY_ATTEMPTS=3
# Database health monitoring
DB_HEALTH_CHECK_TIMEOUT=5000

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_THRESHOLD_RESPONSE_TIME=200
PERFORMANCE_THRESHOLD_SUCCESS_RATE=99

API_DOCS_DESCRIPTION="Comprehensive API documentation for WHO-GACP certified cannabis farming platform"
# ===============================================
# API DOCUMENTATION
# ===============================================
API_DOCS_ENABLED=true
API_DOCS_TITLE="GACP Platform API Documentation"

# OpenAPI/Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_UI_PATH=/api/docs/swagger
