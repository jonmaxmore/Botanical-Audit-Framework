# UAT Environment Configuration
# Copy this file to .env.uat and update values as needed

# Application
NODE_ENV=uat
APP_NAME="Botanical Audit Framework - UAT"
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/botanical-audit-uat
MONGODB_OPTIONS=retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=uat_jwt_secret_key_change_in_production
JWT_EXPIRY=24h
DTAM_JWT_SECRET=uat_dtam_jwt_secret_key_change_in_production
DTAM_JWT_EXPIRY=8h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads/uat

# Email (for notifications)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_pass
EMAIL_FROM=noreply@botanical-uat.test

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/uat.log

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=uat_session_secret_change_in_production
SESSION_TIMEOUT=3600000

# API Keys (if needed)
MAP_API_KEY=your_map_api_key
SMS_API_KEY=your_sms_api_key

# Features Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_MOBILE_APP=true
ENABLE_SURVEY_MODULE=true
ENABLE_TRACK_TRACE=true
ENABLE_GACP_COMPARE=true

# Testing
UAT_MODE=true
SEED_TEST_DATA=true
SKIP_EMAIL_VERIFICATION=true
