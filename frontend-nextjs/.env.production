# Production Environment Variables
# Week 4 Day 3-4: Production Configuration

# API Base URL (Backend server)
NEXT_PUBLIC_API_URL=http://backend:3004/api

# Application Mode
NODE_ENV=production

# Next.js Telemetry
NEXT_TELEMETRY_DISABLED=1

# Server Configuration
PORT=3000
HOSTNAME=0.0.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# Authentication
NEXT_PUBLIC_AUTH_TIMEOUT=3600000

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Chart.js
NEXT_PUBLIC_ENABLE_CHARTS=true

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=th-TH
NEXT_PUBLIC_TIMEZONE=Asia/Bangkok
