# ═══════════════════════════════════════════════════════════════
# GACP Platform - Staging Environment Configuration
# ═══════════════════════════════════════════════════════════════

# Server Configuration
PORT=3004
NODE_ENV=staging

# Database Configuration (Staging)
MONGODB_URI=mongodb+srv://staging_user:staging_password@your-cluster.mongodb.net/gacp_staging
DB_NAME=gacp_staging

# JWT Authentication (Use different secrets for staging)
JWT_SECRET=staging-jwt-secret-change-this-before-use
JWT_EXPIRES_IN=7d

# DTAM JWT (separate system)
DTAM_JWT_SECRET=staging-dtam-jwt-secret-change-this
DTAM_JWT_EXPIRES_IN=24h

# CORS Configuration (Add staging domain)
ALLOWED_ORIGINS=http://localhost:3000,https://staging.gacp.go.th

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Government API Configuration (Use staging endpoints)
DOA_API_URL=https://staging-api.doa.go.th/v1
FDA_API_URL=https://staging-api.fda.moph.go.th/v1
DGA_API_URL=https://staging-api.dga.or.th/v1
DTAM_API_URL=https://staging-api.dtam.go.th/v1

# Payment Configuration (Use test environment)
PROMPTPAY_API_URL=https://test-api.promptpay.io/v1
PROMPTPAY_MERCHANT_ID=test-merchant-id

# Email Configuration (Staging SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging-notifications@gacp.test
SMTP_PASS=staging-app-password

# Notification Configuration (Test channels)
LINE_NOTIFY_TOKEN=staging-line-notify-token
SMS_API_URL=https://test-api.sms.co.th/v1
SMS_API_KEY=staging-sms-api-key

# File Storage Configuration
STORAGE_TYPE=local
AWS_S3_BUCKET=gacp-staging-documents
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration (More verbose for staging)
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log